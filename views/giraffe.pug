extends layout

block content
 h2= title 
 - var brands = results
      
 div(class='row')
    div(class='container-fluid')
        div(class='row m-1')
            each x,i in brands 
                - let destination = `dispatch(\"/giraffe/update?id=${x._id}\")`
                div(class="col-sm-2" onclick="buy("+i+")") #{x.brand}
                button.btn( class="btn-primary ml-1", onclick= destination) Update

 script.
    function buy(num){
        alert(`You purchased item ${num}`);
    }
    function dispatch(path){
        window.location.href=path
    }